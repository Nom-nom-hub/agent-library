# Auto normalize line endings for all text files
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf
*.pyc binary
*.pyo binary

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# PowerShell
*.ps1 text eol=crlf
*.ps2 text eol=crlf
*.psc1 text eol=crlf
*.psc2 text eol=crlf

# Windows batch/cmd
*.bat text eol=crlf
*.cmd text eol=crlf
*.com text eol=crlf

# Markdown
*.md text eol=lf
*.markdown text eol=lf

# JSON
*.json text eol=lf
*.jsonc text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# TOML
*.toml text eol=lf

# Documentation
*.txt text eol=lf
*.rst text eol=lf

# Media files (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary
